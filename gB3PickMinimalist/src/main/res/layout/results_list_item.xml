<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/result_list_item"
	android:layout_width="match_parent"
	android:paddingLeft="10dip"
	android:paddingRight="10dip"
	android:paddingBottom="10dip"
	android:layout_height="wrap_content"
	android:gravity="center_vertical"
	android:orientation="horizontal" >
 	<LinearLayout
		android:id="@+id/state_column"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="bottom"
		android:paddingRight="10dip"
		android:orientation="vertical" >
		<ImageView
			android:id="@+id/bet_state_logo"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="0dip" />
		<TextView
			android:id="@+id/bet_state"
			style="@style/SmallContentText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#ff0000"
			android:gravity="left"
			android:padding="0dip"
			android:text=""
			android:paddingLeft="0dip" />
	</LinearLayout> 
	<LinearLayout
		android:id="@+id/bet_column"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="top"
		android:orientation="vertical" >
		<TextView
			android:id="@+id/main_bet"
			style="@style/SmallContentText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="left"
			android:padding="0dip"
			android:text=""/>
		<TextView
			android:id="@+id/jackpot_slots"
			style="@style/SmallContentText"
			android:textSize="10sp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="left"
			android:padding="0dip"
			android:text=""
			android:paddingLeft="0dip" />
	</LinearLayout>
</LinearLayout>
